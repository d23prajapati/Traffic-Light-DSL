[comment encoding = UTF-8 /]
[module generatePinVariables('http://www.example.org/trafficLightSystem')]
[query public getPinVariableName(aPin : Pin) : String = 'PIN_'+aPin.name.toUpperCase() /]

[template public generatePinVariables(aSystemStructure : SystemStructure)]
[for (aPin: Pin | aSystemStructure.board.pinGroups.pins)]
		[if (not (aPin.type = PinType::GND)
				or (aPin.type = PinType::VCC))]
			const int [aPin.getPinVariableName()/] = [aPin.pinNr/];
		[/if]
	[/for]
[/template]
